<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shape="rectangle">

    <corners
        android:radius="20dp"/>

    <solid
        android:drawable="@color/bg_secondary_activity"
        android:type="linear"
        />
    <padding
        android:left="5dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="5dp"
        />
    <size
        android:width="250dp"
        android:height="50dp"
        />
    <stroke
        android:width="3dp"
        android:color="@color/default_black"
        />

</shape>