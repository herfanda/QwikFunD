<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_one"
        android:background="@color/bg_main_activity"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/header_qwikfund"
            android:textSize="12pt"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/side_padding"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/triple_side_padding">
        <TableRow>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Recap"
                android:textSize="8pt"
                android:textColor="@color/bg_main_activity"
                android:layout_marginLeft="58dp"
                android:layout_marginStart="58dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="@dimen/side_padding"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Statistic"
                android:textSize="8pt"
                android:textColor="@color/bg_main_activity"
                android:layout_marginLeft="58dp"
                android:layout_marginStart="58dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="200dp"
                android:paddingBottom="@dimen/side_padding"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
