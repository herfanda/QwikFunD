<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_additional">

    <RelativeLayout
        android:id="@+id/login_layout_investor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/login_side_padding"
            android:paddingLeft="@dimen/login_side_padding"
            android:layout_alignTop="@+id/login_layout_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="welcome investor"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:id="@+id/login_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/side_padding"
            android:layout_marginLeft="@dimen/side_padding"
            android:layout_marginRight="@dimen/side_padding"
            android:layout_marginBottom="@dimen/half_bar_height"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRed"
                android:textColor="@color/layout_white"
                android:text="@string/text_cancel_btn"
                android:layout_marginTop="@dimen/side_padding"
                android:visibility="gone"
                />

        </LinearLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clicked_state_button"
            android:text="@string/text_login_btn"
            android:textColor="@color/layout_white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/password_login_borrower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_btn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="45dp"
            android:hint="@string/text_password_login"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/layout_white"
            android:textColorHint="@color/hint_color"
            android:theme="@style/loginThemeEditText" />

        <EditText
            android:id="@+id/user_login_borrower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_username_login"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/layout_white"
            android:textColorHint="@color/hint_color"
            android:theme="@style/loginThemeEditText"
            android:layout_above="@+id/password_login_borrower"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp" />
    </RelativeLayout>



</RelativeLayout>