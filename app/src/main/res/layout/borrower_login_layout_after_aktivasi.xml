<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_qf">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/img_width_height"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        android:layout_marginTop="@dimen/triple_side_padding"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/side_padding"
        android:layout_marginStart="@dimen/side_padding"/>

    <RelativeLayout
        android:id="@+id/form_login_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/imgLogo">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_arrow_down"
                    android:drawableTint="@color/bg_secondary_activity"
                    android:singleLine="true"
                    android:hint="User Name"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_arrow_down"
                    android:drawableTint="@color/bg_secondary_activity"
                    android:hint="Password"
                    android:inputType="numberPassword" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/btn_login_after_aktivasi"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/fourty_side_padding"
                android:layout_margin="15dp"
                android:background="@drawable/shapebutton"
                android:text="Sign in"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/user_profile_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/user_profile_image_background"
        android:elevation="@dimen/half_side_padding"
        android:src="@drawable/ic_arrow_down"
        android:drawableTint="@color/colorWhite"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
