<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Pinjaman"
        android:textAlignment="center"
        android:textSize="8pt"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/half_padding"
        android:layout_marginTop="2dp"
        android:background="@color/bg_main_activity"/>

    <TextView
        android:layout_marginTop="@dimen/double_side_padding"
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Pinjaman"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="@dimen/double_side_padding"
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tujuan Pinjaman"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="@dimen/double_side_padding"
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nilai Pinjaman"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="@dimen/double_side_padding"
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lama Pinjaman (Bulan)"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="@dimen/double_side_padding"
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="@dimen/double_side_padding"
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Bid"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="@dimen/double_side_padding"
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bid"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="@dimen/double_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
