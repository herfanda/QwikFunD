<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/divider_one_request_form"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/light_grey">
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_one"
            android:background="@color/bg_main_activity"
            android:id="@+id/relativeLayout">
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/title_rincian_pengajuan"
                android:textSize="9pt"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="58dp"
                android:layout_marginStart="58dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="@dimen/side_padding"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/form_pengajuan_pinjaman"
            android:layout_below="@id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/side_padding">
            
            <TextView
                android:id="@+id/header_pengajuan_pinjaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:paddingTop="@dimen/side_padding"
                android:paddingBottom="@dimen/side_padding"
                android:paddingLeft="@dimen/half_padding"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:paddingTop="@dimen/side_padding"
                android:paddingLeft="@dimen/half_padding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:paddingTop="@dimen/side_padding"
                android:paddingLeft="@dimen/half_padding"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:paddingTop="@dimen/side_padding"
                android:paddingLeft="@dimen/half_padding"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <Button
                        android:id="@+id/btn_back_simulation"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/side_padding"
                        android:layout_marginRight="@dimen/side_padding"
                        android:layout_weight="0.5"
                        android:textSize="10dp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shapebutton"
                        android:text="@string/btn_back_simulation"
                        android:layout_marginTop="@dimen/bottom_area_padding"/>

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/side_padding"
                        android:layout_marginRight="@dimen/side_padding"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shapebutton"
                        android:textSize="10dp"
                        android:text="@string/btn_submit"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/bottom_area_padding"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
